<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/beat_cover"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_border"
        tools:src="@drawable/ic_launcher_background"
        android:scaleType="centerInside" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4.5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/beat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="top|start"
            android:gravity="top|start"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/colorActionBar"
            tools:text="Beat Name"/>

        <TextView
            android:id="@+id/producer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/colorAccent"
            tools:text="Producer Name"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/genre_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="start|bottom"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"
                android:text="Hip Hop/RnB"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/duration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_gravity="end|bottom"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"
                tools:text="3:12" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3.5"
        android:layout_marginStart="10dp"
        android:layout_gravity="center_vertical|end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/is_liked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="20dp"
            tools:src="@drawable/favorite_border_24"/>

        <TextView
            android:id="@+id/beat_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:textSize="19sp"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:singleLine="true"
            android:textColor="@color/colorAccent"
            tools:text="$24.99"/>
    </LinearLayout>

</LinearLayout>
